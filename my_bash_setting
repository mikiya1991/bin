alias vi="gvim"
export PATH="$PATH:/home/mikiya/bin:/home/mikiya/scitools/bin/linux64"
export TERM=xterm
export TERMINFO=/lib/terminfo
alias rrepo="repo init -u ssh://anakin_wang@pcbugit2.realsil.com.cn:29418/rlxlinux/manifest.git"
alias understand="sh ~/bin/scitools/bin/linux64/understand"
BOARD_IP=10.0.2.111

function rftp() {
    if [ $# -ge 2 ]
    then
        echo -e "binary\n put $1\n quit\nquit\n" | tftp $2
    fi
    if [ $# -eq 1 ]
    then
        echo -e "binary\n put $1\n quit\n" | tftp ${BOARD_IP}
    else
        echo -e "binary\n put linux.bin\n quit\n" | tftp ${BOARD_IP}
    fi
}

alias rm="rm -v"
alias t="tmux"
